<%= simple_form_for(:scene) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :location_id, collection: Location.all(order: 'name'), prompt: "Choose a location" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
 