<h1>Stories in <%=  link_to @storyarc.name, @storyarc, :method => :get %> Universe</h1>
</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @stories.each do |story| %>
  <tr>
    <td><%= best_in_place story, :name, :type => :input%></td>
    <td><%= button_to 'Destroy',story, method: :delete, data: { confirm: 'Are you sure?' } %></td>  </tr>
<% end %>
</table>

<br />

<%= render 'form' , :locals =>  {:story => @story} %>