<%= simple_form_for([@universe,@character]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    
    <%= f.select :discipline,  :collection => Character.Willpower%>
    <%= f.select :approach, 	:collection => Character.Manner%>
    <%= f.select :efficacy, 	:collection => Character.Power%>
    <%= f.select :regard, 		:collection => Character.Shown%>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
