<h1>Listing Characters</h1>

<table class="table1">
  <tr>
    <th>Name</th>
    <th>Universe</th>
    <th>Scenes</th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= best_in_place character, :name, :type => :input %></td>
    <td><%= character.universe.name %></td>
    <td><%= character.scenes.map(&:name).join(", ") %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'Back to universe', universe_path(@universe) %>
<%= link_to 'New Character', new_universe_character_path(@universe) %>